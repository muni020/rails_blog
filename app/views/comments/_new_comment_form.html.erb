<div class="container">
  <%= form_with model: [ article, article.comments.build ], class: "mb-4" do |form| %>
    <div class="mb-3">
      <%= form.label :commenter, class: "form-label" %>
      <%= form.text_field :commenter, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :body, class: "form-label" %>
      <%= form.text_area :body, class: "form-control", rows: 3, required: true %>
    </div>
    <div class="form-group">
      <%= form.label :status %>
        <%= form.select :status, options_for_select(Comment::VALID_STATUSES, article.comments.build.status), {}, {
          class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= form.submit "Post Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
