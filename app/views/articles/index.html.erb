
<div class="container my-5">
   <h1 class="text-center display-4 mb-4">List of All Articles</h1>
   <div class="d-flex flex-wrap gap-3">
     <% @articles.each do |article| %>
       <% if !article.archived? %>
       <div class="card p-3 shadow-sm justify-content-between" style="width: 18rem;">
         <h2 class="h5 card-title">
           <%= link_to article.title, article, class: "text-decoration-none" %>
         </h2>
         <div class="d-flex justify-content-between mt-2">
           <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-primary btn-sm" %>
           <%= link_to "Delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
         </div>
       </div>
       <%end%>
     <% end %>
   </div>

   <div class="text-center mt-4">
     <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
   </div>
</div>
