<%= form_with model: article do |form| %>
    <div class="container my-5">
      <div class="mb-3">
        <label for="article_title" class="form-label">Title</label>
        <%= form.text_field :title, class: "form-control", id: "article_title" %>
        <% article.errors.full_messages_for(:title).each do |message| %>
          <div class="text-danger">
            <%= message %>
          </div>
        <% end %>
      </div>
  
      <div class="mb-3">
        <label for="article_body" class="form-label">Body</label>
        <%= form.text_area :body, class: "form-control", id: "article_body", rows: 5 %>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <div class="text-danger">
            <%= message %>
          </div>
        <% end %>
      </div>
  
      <div class="text-center">
        <%= form.submit "Create Post", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  